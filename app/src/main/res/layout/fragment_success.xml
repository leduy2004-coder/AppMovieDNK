<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SuccessFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/bg_circle_border"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đã đặt vé thành công"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#61B145"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="383dp"
            android:src="@drawable/img_success" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:src="@drawable/img_succes_2" />

        <include layout="@layout/button_primary"/>
    </LinearLayout>
</FrameLayout>